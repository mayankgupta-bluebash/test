{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:react/recommended", "eslint-config-standard", "prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "quotes": [
      "error",
      "single",
      {
        "avoidEscape": true
      }
    ],
    "jsx-quotes": ["error", "prefer-single"],
    "space-infix-ops": [
      "error",
      {
        "int32Hint": false
      }
    ],
    "prefer-template": "error",
    "no-unused-vars": "error",
    "import/no-unused-modules": "error",
    "import/newline-after-import": [
      "error",
      {
        "count": 1
      }
    ],
    "max-len": [
      "error",
      {
        "code": 200,
        "ignoreComments": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true,
        "ignoreUrls": true
      }
    ],
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 2,
        "maxEOF": 1
      }
    ],
    "no-multi-spaces": ["error"],
    "eol-last": ["error", "always"],
    "no-shadow": "error",
    "react/jsx-indent": ["error", 2],
    "react/self-closing-comp": [
      "error",
      {
        "component": true,
        "html": true
      }
    ]
  }
}
